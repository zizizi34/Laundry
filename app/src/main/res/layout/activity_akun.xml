<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Akun">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="90dp">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/akun_DataProfile"
                android:fontFamily="@font/montserratregular"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <!-- Profile Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nama Lengkap -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/akun_NamaLengkap"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvNamaLengkap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Nomor Telepon -->

                <!-- Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/akun_Password"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/akun_EditProfile"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/monsterratbold"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Sign Out Button -->
            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/akun_SignOut"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/monsterratbold"
                android:backgroundTint="#E53E3E"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
